<Application x:Class="pANEL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>

        <!-- ============================
             COLOR PALETTE
        ============================= -->
        <Color x:Key="BgDark">#0D0D1A</Color>
        <Color x:Key="BgCard">#14142B</Color>
        <Color x:Key="BgInput">#1C1C35</Color>
        <Color x:Key="AccentPurple">#7C3AED</Color>
        <Color x:Key="AccentBlue">#3B82F6</Color>
        <Color x:Key="AccentGlow">#A855F7</Color>
        <Color x:Key="TextPrimary">#F1F5F9</Color>
        <Color x:Key="TextSecondary">#94A3B8</Color>
        <Color x:Key="TextMuted">#475569</Color>
        <Color x:Key="BorderColor">#2D2D5E</Color>
        <Color x:Key="ErrorColor">#EF4444</Color>
        <Color x:Key="SuccessColor">#22C55E</Color>

        <SolidColorBrush x:Key="BrushBgDark"       Color="{StaticResource BgDark}"/>
        <SolidColorBrush x:Key="BrushBgCard"       Color="{StaticResource BgCard}"/>
        <SolidColorBrush x:Key="BrushBgInput"      Color="{StaticResource BgInput}"/>
        <SolidColorBrush x:Key="BrushAccentPurple" Color="{StaticResource AccentPurple}"/>
        <SolidColorBrush x:Key="BrushAccentBlue"   Color="{StaticResource AccentBlue}"/>
        <SolidColorBrush x:Key="BrushAccentGlow"   Color="{StaticResource AccentGlow}"/>
        <SolidColorBrush x:Key="BrushTextPrimary"   Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="BrushTextSecondary" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="BrushTextMuted"     Color="{StaticResource TextMuted}"/>
        <SolidColorBrush x:Key="BrushBorder"       Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="BrushError"        Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="BrushSuccess"      Color="{StaticResource SuccessColor}"/>

        <!-- Button Gradient -->
        <LinearGradientBrush x:Key="BtnGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#7C3AED" Offset="0"/>
            <GradientStop Color="#3B82F6" Offset="1"/>
        </LinearGradientBrush>

        <!-- =============================
             BUTTON STYLE
        ============================== -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background"   Value="{StaticResource BtnGradient}"/>
            <Setter Property="Foreground"   Value="White"/>
            <Setter Property="FontFamily"   Value="Segoe UI"/>
            <Setter Property="FontSize"     Value="14"/>
            <Setter Property="FontWeight"   Value="SemiBold"/>
            <Setter Property="Height"       Value="46"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect Color="#7C3AED" BlurRadius="18" ShadowDepth="0" Opacity="0.55"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.72"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- =============================
             TEXT BOX STYLE
        ============================== -->
        <Style x:Key="KeyInput" TargetType="TextBox">
            <Setter Property="Background"      Value="{StaticResource BrushBgInput}"/>
            <Setter Property="Foreground"      Value="{StaticResource BrushTextPrimary}"/>
            <Setter Property="CaretBrush"      Value="{StaticResource BrushAccentGlow}"/>
            <Setter Property="FontFamily"      Value="Consolas"/>
            <Setter Property="FontSize"        Value="17"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Height"          Value="50"/>
            <Setter Property="Padding"         Value="16,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush"     Value="{StaticResource BrushBorder}"/>
            <Setter Property="CharacterCasing" Value="Upper"/>
            <Setter Property="MaxLength"       Value="19"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Padding="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Root" Property="BorderBrush"
                                        Value="{StaticResource BrushAccentGlow}"/>
                                <Setter TargetName="Root" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#A855F7" BlurRadius="12"
                                                          ShadowDepth="0" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
